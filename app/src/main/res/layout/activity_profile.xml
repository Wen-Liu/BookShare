<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Widget.AppCompat.Light.ActionBar"
    tools:context="com.wenliu.bookshare.profile.ProfileActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_layout_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collape_toolbar_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_gradient_toolbar_circle"
            app:contentScrim="@color/LightBlue_200"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleTextColor="@color/Brown_600">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/profile_info_paddingHorizontal"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7">

                <TextView
                    android:id="@+id/tv_profile_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:includeFontPadding="false"
                    android:text=""
                    android:textColor="@color/Black"
                    android:textSize="@dimen/profile_info_number_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_profile_user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/gap_each_line_small"
                    android:includeFontPadding="false"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/profile_info_title_size" />

                <LinearLayout
                    android:id="@+id/llayout_book_data_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/gap_each_line_medium"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_profile_book_book"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:includeFontPadding="false"
                            android:text="0"
                            android:textColor="@color/Grey_800"
                            android:textSize="@dimen/profile_info_number_size"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:includeFontPadding="false"
                            android:text="@string/profile_book_own"
                            android:textColor="@color/Grey_600"
                            android:textSize="@dimen/profile_info_title_size" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/profile_divider_length"
                        android:background="@color/Grey_400" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_profile_book_unread"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:includeFontPadding="false"
                            android:text="0"
                            android:textColor="@color/Grey_800"
                            android:textSize="@dimen/profile_info_number_size"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:includeFontPadding="false"
                            android:text="@string/profile_book_unread"
                            android:textColor="@color/Grey_600"
                            android:textSize="@dimen/profile_info_title_size" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/profile_divider_length"
                        android:background="@color/Grey_400" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_profile_book_read"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:includeFontPadding="false"
                            android:text="0"
                            android:textColor="@color/Grey_800"
                            android:textSize="@dimen/profile_info_number_size"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:includeFontPadding="false"
                            android:text="@string/profile_book_read"
                            android:textColor="@color/Grey_600"
                            android:textSize="@dimen/profile_info_title_size" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/profile_divider_length"
                        android:background="@color/Grey_400" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_profile_book_lent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:includeFontPadding="false"
                            android:text="0"
                            android:textColor="@color/Grey_800"
                            android:textSize="@dimen/profile_info_number_size"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:includeFontPadding="false"
                            android:text="@string/profile_book_lent"
                            android:textColor="@color/Grey_600"
                            android:textSize="@dimen/profile_info_title_size" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:theme="@style/AppTheme.AppBarOverlay"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_profile_user_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/all_placeholder_avatar"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_profile_change_image"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/shape_outline_circle_white"
                        android:padding="3dp"
                        android:src="@drawable/ic_edit"
                        app:layout_constraintBottom_toBottomOf="@id/iv_profile_user_image"
                        app:layout_constraintEnd_toEndOf="@id/iv_profile_user_image" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.Toolbar>

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs_profile"
                style="@style/TabLayoutText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="260dp"
                android:background="@color/White"
                app:tabTextColor="@color/Grey_400">

                <android.support.design.widget.TabItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Friend" />

                <android.support.design.widget.TabItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lent Book" />

            </android.support.design.widget.TabLayout>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"></android.support.v4.view.ViewPager>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_person_add"
        app:backgroundTint="@color/Yellow_400"
        app:fabSize="mini" />


</android.support.design.widget.CoordinatorLayout>
