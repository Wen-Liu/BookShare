<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    android:background="@color/White"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/iv_item_friend_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginEnd="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/all_placeholder_avatar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_item_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_item_friend_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="appworks@gmail.com"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_item_friend_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello world!"
            android:textSize="16sp" />
    </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>