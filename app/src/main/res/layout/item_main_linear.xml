<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llayout_item_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    android:background="@color/White"
    android:elevation="4dp"
    android:orientation="horizontal"
    android:paddingEnd="8dp"
    android:paddingVertical="12dp">

    <ImageView
        android:id="@+id/ImV_main_book_cover"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:scaleType="fitCenter"
        android:transitionName="@string/transitionName_detail"
        app:srcCompat="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/llinear_item_Book_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:minHeight="120dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_book_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="@dimen/book_dialog_gap_text_edit"
                android:background="@color/White"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="林立青"
                android:textColor="@color/Black"
                android:textSize="@dimen/detail_book_tv_size"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/tv_item_book_borrow_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@color/White"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="林立青"
                android:textColor="@color/Black"
                android:textSize="@dimen/detail_book_tv_size"
                android:textStyle="bold"
                android:typeface="sans" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="做工的人"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_main_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="subtitle"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_main_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="author"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <!--<RatingBar-->
        <!--style="?android:attr/ratingBarStyleIndicator"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:isIndicator="false"-->
        <!--android:numStars="5"-->
        <!--android:rating="3.5"-->
        <!--android:stepSize="0.5" />-->


    </LinearLayout>

</LinearLayout>