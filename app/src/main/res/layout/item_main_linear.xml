<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llayout_item_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    android:background="@color/White"
    android:elevation="4dp"
    android:orientation="horizontal"
    android:paddingEnd="8dp"
    android:paddingVertical="12dp">

    <ImageView
        android:id="@+id/ImV_main_book_cover"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:scaleType="fitCenter"
        android:transitionName="@string/transitionName_detail"
        app:srcCompat="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:minHeight="120dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_main_book_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="@dimen/gap_each_text_6"
                android:background="@color/White"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="林立青"
                android:textColor="@color/Black"
                android:textSize="@dimen/main_book_tv_text_size"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/tv_main_book_borrow_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="@dimen/gap_each_text_6"
                android:background="@color/White"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="林立青"
                android:textColor="@color/Black"
                android:textSize="@dimen/main_book_tv_text_size"
                android:textStyle="bold"
                android:typeface="sans" />

            <Button
                android:id="@+id/btn_main_delete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_delete"
                android:padding="6dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@android:color/black"
            android:textSize="@dimen/main_book_title_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_main_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/gap_each_line_small"
            android:layout_marginStart="@dimen/gap_front_space_small"
            android:paddingEnd="@dimen/gap_padding_end_for_italic"
            android:text="subtitle"
            android:textColor="@android:color/black"
            android:textSize="@dimen/main_book_subtitle_size"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_main_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="author"
            android:textColor="@android:color/black"
            android:textSize="@dimen/main_book_tv_text_size" />

        <!--<RatingBar-->
        <!--style="?android:attr/ratingBarStyleIndicator"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:isIndicator="false"-->
        <!--android:numStars="5"-->
        <!--android:rating="3.5"-->
        <!--android:stepSize="0.5" />-->


    </LinearLayout>
</LinearLayout>